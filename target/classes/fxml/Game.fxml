<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="gameLayout"
            stylesheets="@../Styles.css"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.controllers.GameScreenController">

    <!-- CENTER: two separate player columns side-by-side -->
    <center>
        <HBox fx:id="playersRow" spacing="20" alignment="CENTER">
            <!-- PLAYER 1 COLUMN -->
            <VBox fx:id="p1Col" spacing="10" alignment="TOP_CENTER">
                <Label text="Player 1" styleClass="label-header"/>
                <StackPane styleClass="neon-wrapper">
                    <Canvas fx:id="gridCanvasP1" width="300" height="600"/>
                </StackPane>
                <StackPane styleClass="neon-wrapper">
                    <Canvas fx:id="nextCanvasP1" width="150" height="150" focusTraversable="false"/>
                </StackPane>
                <Label fx:id="currentScoreP1" styleClass="label-player-name"/>
            </VBox>

            <!-- PLAYER 2 COLUMN -->
            <VBox fx:id="p2Col" spacing="10" alignment="TOP_CENTER">
                <Label text="Player 2" styleClass="label-header"/>
                <StackPane styleClass="neon-wrapper">
                    <Canvas fx:id="gridCanvasP2" width="300" height="600"/>
                </StackPane>
                <StackPane styleClass="neon-wrapper">
                    <Canvas fx:id="nextCanvasP2" width="150" height="150" focusTraversable="false"/>
                </StackPane>
                <Label fx:id="currentScoreP2" styleClass="label-player-name"/>
            </VBox>
        </HBox>
    </center>

    <!-- RIGHT: attempts lists + back button -->
    <right>
        <VBox spacing="10">
            <!-- P1 attempts -->
            <VBox styleClass="neon-wrapper" alignment="TOP_CENTER" spacing="5">
                <Label text="P1 Attempt Scores" styleClass="label-header" />
                <ListView fx:id="scoreViewP1" prefHeight="200" styleClass="score-list" focusTraversable="false" />
            </VBox>

            <!-- P2 attempts -->
            <VBox fx:id="p2ScoresWrapper" styleClass="neon-wrapper" alignment="TOP_CENTER" spacing="5">
                <Label text="P2 Attempt Scores" styleClass="label-header" />
                <ListView fx:id="scoreViewP2" prefHeight="200" styleClass="score-list" focusTraversable="false" />
            </VBox>

            <Button fx:id="backButton" text="Back to Menu" focusTraversable="false"/>

            <BorderPane.margin>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </BorderPane.margin>
        </VBox>
    </right>

</BorderPane>
