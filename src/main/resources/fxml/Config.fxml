<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="gameLayout" stylesheets="@../Styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.ConfigController">
    <VBox alignment="CENTER" prefHeight="300" prefWidth="400" spacing="10.0">
        <!-- Acts as wrapper for neon boarder  -->
        <StackPane styleClass="neon-wrapper">
            <!-- Field Size Controls -->
            <VBox spacing="5">
                <Label styleClass="gameLabels" text="Field Size:" />
                <Slider fx:id="fieldSizeSlider" majorTickUnit="2" max="20" min="10" minorTickCount="1" prefWidth="300" snapToTicks="true" value="10">
                </Slider>
                <Label fx:id="fieldSizeValue" styleClass="gameLabels" text="10" />
            </VBox>
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>

        </StackPane>

        <!-- Acts as wrapper for neon boarder  -->
        <StackPane styleClass="neon-wrapper">
            <!-- Level Controls -->
            <VBox spacing="5">
                <Label styleClass="gameLabels" text="Level:" />
                <Slider fx:id="levelSlider" majorTickUnit="1" max="10" min="1" minorTickCount="0" prefWidth="300" snapToTicks="true" value="1">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Slider>
                <Label fx:id="levelValue" styleClass="gameLabels" text="1" />
            </VBox>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>

        </StackPane>

        <!-- Acts as wrapper for neon boarder  -->
        <StackPane styleClass="neon-wrapper">
            <!-- Checkboxes -->
            <VBox alignment="CENTER_LEFT" spacing="10">
                <Label styleClass="gameLabels" text="Game Settings" />
                <CheckBox fx:id="musicCheckBox" styleClass="gameLabels" text="Music" />
                <CheckBox fx:id="soundEffectsCheckBox" styleClass="gameLabels" text="Sound Effects" />
                <CheckBox fx:id="aiPlayCheckBox" styleClass="gameLabels" text="AI Play" />
                <CheckBox fx:id="extendedModeCheckBox" styleClass="gameLabels" text="Extended Mode" />
            </VBox>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
        </StackPane>
        <HBox alignment="CENTER" spacing="50.0">
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin><!-- Back Button -->
            <Button fx:id="backButton" text="Back" />
            <Button fx:id="resetButton" text="Reset" />
        </HBox>

    </VBox>
</StackPane>
